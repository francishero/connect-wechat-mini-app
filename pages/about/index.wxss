
.container{
    background: #e0dbdc;
    padding: 0;
    font-size: 11pt;
}
.about-item {
	padding:5px 15px;
}

.about-item-title {
	
	font-size: 13px;
	line-height: 30px;
  flex: 1;
  display: flex;
   align-items: center;
   
   
}

.about-item-content {
	margin-top: 5px;
	display: block;
	text-indent: 20px;
  font-size: 14px;
}

.link {
	color: #479de6;
	text-decoration: underline;
}
.header{
    position: relative;
    width: 100%;
    height: 400rpx;
    text-align: center;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
   background-color:#479de6;
}
.black-cover{
    position: absolute;
    z-index: 2;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #888;
    opacity: .18;
}
.version{
    height: 100rpx;
    background: #fff;
    display: flex;
    align-items: center;
    padding: 0 45rpx;
    box-sizing: border-box;
    font-size: 13px;
    color: #666;
    border-bottom: 1px #e5e5e5 solid;
}
.version-title {
    flex: 1;
    display: flex;
    align-items: center;
}
.version-text{
    font-size: 10pt;
    line-height: 100%;
    color: #7acfa6;
    border: 1px solid #7acfa6;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    margin-left: 10rpx;
    text-align: center;
}
.desc-content{
    padding-bottom: 15rpx;
    font-size: 10px;
    color: #222;
}
.footer-nuist{
    font-size: 10px;
    height: 10pt;
    line-height: 10pt;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8rpx;
}
.footer-nuist image{
    width: 10pt;
    height: 10pt;
    margin-right: 5rpx;
}
 .nuist-text{
  font-size: 10px;
}
.header-text{
  display:flex;
  align-content: center;
}