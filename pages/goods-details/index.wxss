/* pages/goods-details/index.wxss */

.container {
  background-color: #f2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
  padding: 0 0 100rpx;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 748rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 748rpx;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #000;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.3;
}

.swiper-container .dots .dot.active {
  opacity: 0.6;
}

.goods-info {
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 1rpx;
  width: 100%;
  display: inline-block;
}

.goods-info .goods-title {
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 38rpx;
  line-height: 1.4;
  color: #000;
  margin-bottom: 2rpx;
}

.goods-info .goods-price {
  box-sizing: border-box;
  padding: 0 35rpx;
  color: #03a9f4;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-like.active {
  display: inline-block;
  color: #fff;
  padding: 8rpx 16rpx;
  font-size: 0.8em;
  border-radius: 14%;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
  background: #03a9f4; /* Old browsers */
}

.goods-like {
  display: inline-block;
  color: #fff;
  padding: 8rpx 16rpx;
  font-size: 0.8em;
  border-radius: 14%;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
  background-color: rgba(255, 255, 0);
}

.goods-like::after {
  border: none;
}

.goods-favcount {
  display: inline-block;
  position: absolute;
  top: 23rpx;
  left: 78rpx;
  font-size: 36rpx;
}

.goods-des-info {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.label-title {
  font-size: 34rpx;
  color: #000;
  padding: 30rpx 30rpx 20rpx;
  text-align: center;
}

.goods-text {
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}

.des-imgs {
  width: 100%;
}

.des-imgs image {
  width: 100%;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
}

.footer-box .shop-cart-btn {
  position: relative;
  width: 150rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/cart.png") no-repeat center 21rpx;
  background-size: 44rpx auto;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 80rpx;
  top: -20rpx;
}

.footer-box .join-shop-cart {
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  font-size: 28rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #5caece;
  color: #fff;
  font-size: 33rpx;
  position: absolute;
  right: 0;
}

.goods-desc-info {
  width: 100%;
  background: #fff;
  margin-bottom: 40rpx;
  box-shadow: 0 2px 4px 0 rgba(146, 146, 146, 0.19);
}

#btn {
  background-color: #fff;
  position: absolute;
  right: 52%;
  top: 3%;
  padding-left: 0;
}

#btn::after {
  border: none;
}

.like {
  display: inline-block;
  position: absolute;
  left: 5%;
}

.like-icon {
  height: 40rpx;
  width: 40rpx;
  position: relative;
  top: 14rpx;
}

.footer-box button {
  background-color: #fff;
}

.share-icon {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  right: 70%;
  top: 29%;
}

.arrow-yellow {
  height: 50rpx;
  width: 60rpx;
  margin: 0 auto;
  display: block;
}

.wechat-icon {
  height: 43rpx;
  width: 43rpx;
  position: relative;
  top: 8rpx;
  right: 2rpx;
}
